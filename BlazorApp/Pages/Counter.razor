@page "/counter"

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary btn-hover-color" @onclick="IncrementCount">Add @IncrementAmount</button>
<button class="btn btn-primary btn-hover-color" @onclick="SubtractCount">Subtract @IncrementAmount</button>
<button class="btn btn-primary btn-hover-color" @onclick="ResetCount">Reset</button>

@code {
    private int currentCount = 0;

    [Parameter] public int IncrementAmount {get;set;} = 1;

    private void IncrementCount()
    {
        currentCount += IncrementAmount;
    }
    private void ResetCount()
    {
        currentCount = 0;
    }
    private void SubtractCount()
    {
        currentCount -= IncrementAmount;
    }
}
